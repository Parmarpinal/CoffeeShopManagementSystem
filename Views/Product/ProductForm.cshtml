@model MVCDemo1.Models.ProductModel

<main id="main" class="main">
    <a asp-controller="Product" asp-action="Index" class="me-2 fs-2 text-dark"><i class="bi bi-arrow-left-short"></i></a>
    <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Product</h5>

                        <form>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <input type="hidden" asp-for="ProductID" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ProductName" class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span>Product Name
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="ProductName" class="form-control">
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ProductPrice" class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span>Price
                                </label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="ProductPrice" class="form-control">
                                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ProductCode" class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span>Product Code
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="ProductCode" class="form-control" type="text">
                                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span>Description
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Description" class="form-control" type="text">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="UserID">
                                    <span class="text-danger">*</span>User Name
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserID">
                                        <option value="">Select User</option>
                                        @foreach(var user in ViewBag.UserList)
                                        {
                                            <option value="@user.UserID">@user.UserName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="UserID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-2">
                        <input class="btn btn-success" asp-controller="Product" asp-action="onProductSave" type="submit">
                                </div>
                            </div>
                        </form>
                        <div></div>
                    </div>
                </div>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}