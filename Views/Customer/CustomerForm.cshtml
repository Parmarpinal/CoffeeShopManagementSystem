@model CustomerModel

<main id="main" class="main">
    <a asp-controller="Home" asp-action="Index" class="me-2 fs-2 text-dark"><i class="bi bi-arrow-left-short"></i></a>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Customer</h5>

            <form>
                @Html.HiddenFor(m => m.CustomerID)
                <div class="row mb-3">
                    <label asp-for="CustomerName" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Customer Name</label>
                    <div class="col-sm-10">
                        <input asp-for="CustomerName" type="text" class="form-control">
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="HomeAddress" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Home address</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="HomeAddress" rows="3"></textarea>
                        <span asp-validation-for="HomeAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="MobileNo" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Mobile No</label>
                    <div class="col-sm-10">
                        <input asp-for="MobileNo" type="text" class="form-control">
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="GSTNo" class="col-sm-2 col-form-label"><span class="text-danger">*</span>GST No</label>
                    <div class="col-sm-10">
                        <input asp-for="GSTNo" type="text" class="form-control">
                        <span asp-validation-for="GSTNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="CityName" class="col-sm-2 col-form-label"><span class="text-danger">*</span>City Name</label>
                    <div class="col-sm-10">
                        <input asp-for="CityName" type="text" class="form-control">
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Pincode" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Pincode</label>
                    <div class="col-sm-10">
                        <input asp-for="Pincode" type="text" class="form-control">
                        <span asp-validation-for="Pincode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="NetAmount" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Net amount</label>
                    <div class="col-sm-10">
                        <input asp-for="NetAmount" class="form-control" type="number">
                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="UserID" class="col-sm-2 col-form-label"><span class="text-danger">*</span>User Name</label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="UserID">
                            <option value="">Select User</option>
                            @foreach (var user in ViewBag.UserList)
                            {
                                <option value="@user.UserID">@user.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2">
                        <input class="btn btn-success" asp-controller="Customer" asp-action="onCustomerSave" type="submit" value="Submit">
                    </div>
                </div>
            </form>

        </div>
    </div>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}

